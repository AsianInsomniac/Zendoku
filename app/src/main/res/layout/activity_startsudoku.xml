<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_back"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:onClick="toHome"
        />

    <TextView
        android:id="@+id/tvTitle_sudokuBoardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro_semibold"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textSize="60sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_back"
        android:layout_margin="20dp"
        />

    <com.mobdeve.s17.group18.zendoku.views.SudokuBoardView
        android:id="@+id/sudokuBoardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvTitle_sudokuBoardView"
        android:layout_margin="20dp"
        />

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sudokuBoardView"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="9"
        >

        <Button
            android:id="@+id/oneBtn"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_margin="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/twoBtn"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_margin="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/threeBtn"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_margin="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/fourBtn"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_margin="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/fiveBtn"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_margin="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/sixBtn"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_margin="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/sevenBtn"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:layout_margin="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/eightBtn"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_margin="2dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/nineBtn"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_margin="2dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_indicator_and_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_input"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/tvSkips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:layout_margin="20dp"
            android:textSize="32sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:gravity="center">

            <Button
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:text="@string/board_skip"
                android:onClick="skipBoard"
                />

            <Button
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:text="@string/board_verify"
                android:onClick="verifyBoard"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>